FROM ubuntu:22.04

RUN apt update && apt install -y \
    libunwind8 \
    libssh-4 \
    libcurl3-gnutls \
 && apt clean \
 && rm -rf /var/lib/apt/lists/*

ADD artifacts/debug/libvppcom* /usr/local/lib/
ADD artifacts/debug/libvppinfra* /usr/local/lib/
ADD artifacts/debug/libvlibmemoryclient* /usr/local/lib/
ADD artifacts/debug/libvlibapi* /usr/local/lib/
ADD artifacts/debug/libvcl_ldpreload* /usr/local/lib/
ADD artifacts/debug/libsvm* /usr/local/lib/
ADD artifacts/debug/libmemif.so /usr/local/lib/
ADD artifacts/debug/calicovppversion /usr/local/lib/calicovppversion

RUN cp /usr/lib/x86_64-linux-gnu/libunwind.so.8 /usr/local/lib/
RUN cp /usr/lib/x86_64-linux-gnu/libcurl-gnutls.so* /usr/local/lib/
RUN cp /usr/share/lintian/overrides/libssh-4 /usr/local/lib/
