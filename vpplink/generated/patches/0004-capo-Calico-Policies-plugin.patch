+u32
+capo_ipset_create (capo_ipset_type_t type)
+{
+  capo_ipset_t *ipset;
+  pool_get (capo_ipsets, ipset);
+  ipset->type = type;
+  ipset->members = NULL;
+  return ipset - capo_ipsets;
