+		  break;
+		}
+	    }
+	  else if (!is_ip6 && pfx_af == AF_IP4)
+	    {
+	      if (ip4_destination_matches_route (&ip4_main, src_ip4,
+						 &ip_addr_v4 (&prefix->addr),
+						 prefix->len))
+		{
+		  found = 1;
+		  break;
+		}
+	    }
+	}
+      if (!found)
+	{
+	  return -9;
+	}
+    }
+
+  if (rule->prefixes[CAPO_NOT_SRC])
+    {
+      ip_prefix_t *prefix;
+      vec_foreach (prefix, rule->prefixes[CAPO_NOT_SRC])
