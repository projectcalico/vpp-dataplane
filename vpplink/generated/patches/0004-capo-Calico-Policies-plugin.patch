+	continue;
+      if (ip4_destination_matches_route (&ip4_main, addr,
+					 &ip_addr_v4 (&member->prefix.addr),
+					 member->prefix.len))
+	{
+	  return 1;
+	}
+    }
+  return 0;
+}
