+capo_rule_delete (u32 id)
+{
+  capo_rule_t *rule;
+  rule = capo_rule_get_if_exists (id);
+  if (NULL == rule)
+    return VNET_API_ERROR_NO_SUCH_ENTRY;
+
+  capo_rule_cleanup (rule);
+  pool_put (capo_rules, rule);
+
+  return 0;
+}
