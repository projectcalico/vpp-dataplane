+      s = format (s, "    %U", format_capo_policy, policy, 4 /* indent */,
+		  CAPO_POLICY_ONLY_RX, conf->invert_rx_tx);
+    }
+  if (vec_len (tx_policies))
+    s = format (s, "  tx:\n");
+  vec_foreach_index (i, tx_policies)
