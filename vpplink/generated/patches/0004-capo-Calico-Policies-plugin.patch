+	    }
+	}
+    }
+
+  if (rule->ip_ipsets[CAPO_DST])
+    {
+      u32 *ipset;
+      u8 found = 0;
+      vec_foreach (ipset, rule->ip_ipsets[CAPO_DST])
+	{
+	  if (is_ip6)
+	    {
+	      if (ipset_contains_ip6 (&capo_ipsets[*ipset], dst_ip6))
+		{
+		  found = 1;
+		  break;
+		}
+	    }
+	  else
+	    {
+	      if (ipset_contains_ip4 (&capo_ipsets[*ipset], dst_ip4))
