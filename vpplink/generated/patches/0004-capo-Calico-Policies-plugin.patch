+  capo_ipset_t *ipset;
+  ipset = capo_ipsets_get_if_exists (id);
+  if (NULL == ipset)
+    return VNET_API_ERROR_NO_SUCH_ENTRY;
+
+  pool_free (ipset->members);
+  pool_put (capo_ipsets, ipset);
+  return 0;
+}
