+		}
+	    }
+	}
+    }
+
+  /* IP ipsets */
+  if (rule->ip_ipsets[CAPO_SRC])
+    {
+      u32 *ipset;
+      u8 found = 0;
+      vec_foreach (ipset, rule->ip_ipsets[CAPO_SRC])
+	{
+	  if (is_ip6)
