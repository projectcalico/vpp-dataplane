+	      if (ipset_contains_ip4 (&capo_ipsets[*ipset], src_ip4))
+		{
+		  found = 1;
+		  break;
+		}
+	    }
+	}
+      if (!found)
+	{
+	  return -15;
+	}
+    }
+
+  if (rule->ip_ipsets[CAPO_NOT_SRC])
+    {
+      u32 *ipset;
+      vec_foreach (ipset, rule->ip_ipsets[CAPO_NOT_SRC])
+	{
+	  if (is_ip6)
