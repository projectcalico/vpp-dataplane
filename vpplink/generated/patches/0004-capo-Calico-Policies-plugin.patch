+  pool_foreach (member, ipset->members)
+    {
+      if (member->ipport.addr.version != AF_IP6)
+	continue;
+      if (l4proto == member->ipport.l4proto && port == member->ipport.port &&
+	  !ip6_address_compare (addr, &ip_addr_v6 (&member->ipport.addr)))
+	{
+	  return 1;
+	}
+    }
+  return 0;
+}
